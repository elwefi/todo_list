<br> </br>
<div class="container">

  <div class="well task-statistic">
    <%= render "statistic" %>
  </div>

  <div class="well">
    <div class="btn-group" role="group" >
      <%= link_to all_tasks_tasks_path, method: :get, remote: true, class: "btn btn-default" do %>
        <i class="icon-tasks"></i><span> All</span>
      <% end %>
      <%= link_to finished_tasks_path, method: :get, remote: true, class: "btn btn-default" do %>
        <i class="icon-thumbs-up"></i><span> Completed</span>
      <% end %>
      <%= link_to unfinished_tasks_path, method: :get, remote: true, class: "btn btn-default" do %>
        <i class="icon-hand-right"></i><span> Uncompleted</span>
      <% end %>
    </div>
    <div class="pull-right">

      <%= link_to new_task_path, remote: true, class: "btn btn-info" do %>
        <i class="icon-plus"></i><span style="color:white;"> New Task</span>
      <% end %>
      <%= link_to categories_path, class: "btn btn-info" do %>
        <i class="icon-tasks"></i><span style="color:white;"> Categories</span>
      <% end %>
      <br><br/>
    </div>
  <div class="new-task"></div>
  
  <table class="table table-bordered table-striped" id="sortable">
    <thead>
      <tr>
        <th>Task</th>
        <th>Category</th>
        <th></th>
      </tr>
    </thead>
    <tbody class="task-index">
      <%= render "index" %>
    </tbody>
  </table>
</div>
  </div>
<div id="task-modal" class="modal hide fade"></div>